<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp2.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar x:Name="menu">
        <Tab Icon="home.png" Title="Главная" Shell.NavBarIsVisible="False">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
        <Tab Icon="gallery.png" Title="Галерея">
            <ShellContent ContentTemplate="{DataTemplate local:Gallery}"/>
        </Tab>
        <Tab Icon="record.png" Title="Запись">
            <ShellContent ContentTemplate="{DataTemplate local:Request}"/>
        </Tab>
        <Tab Icon="user.png" Title="Профиль">
            <ShellContent ContentTemplate="{DataTemplate local:Profile}"/>
        </Tab>
    </TabBar>

</Shell>
