<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.View.Registration"
             Title="Registration">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Регистрация"
               FontFamily="Grenze"
               TextColor="White"
               FontSize="28"
               FontAttributes="Bold"
               Margin="0,0,0,40"/>
        <Label Text="Имя профиля"/>
        <Entry/>
        <Label Text="Почта"/>
        <Entry/>
        <Label Text="Пароль"/>
        <Entry/>
        <Label Text="Повтор пароля"/>
        <Entry/>
        <Button Text="Подвердить"
                TextColor="White"
                FontAttributes="Bold"
                FontFamily="Grenze"
                Clicked="LogIn"
                BackgroundColor="#7E100F"
                CornerRadius="10"/>
    </VerticalStackLayout>
</ContentPage>