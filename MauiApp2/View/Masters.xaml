<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.View.Masters"
     
             Title="Masters">
    <VerticalStackLayout>
        <Frame BackgroundColor="#282D30" HeightRequest="70" Margin="0,0,0,20">
            <Label Text="Выбрать мастера" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" FontSize="20"></Label>
        </Frame>
        <Frame CornerRadius="20" BackgroundColor="#282D30" WidthRequest="370" HeightRequest="80" Margin="0,0,0,20">
            <Grid HorizontalOptions="Center" ColumnDefinitions="50,10, 250" >
                <Image Source="user.png" Grid.Column="0"></Image>
                <Label Text="Любой свободный мастер" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" FontSize="20" Grid.Column="2"></Label>
                
            </Grid>
        </Frame>

        <!--<CollectionView SelectionMode="None"
                            ItemsSource=" {Binding Collections}" >

            <CollectionView.ItemsLayout>
